<h1> Create a new Event </h1>
<%= form_for @event , method:"POST" do |f| %>
    <%= f.label :title%>
    <%= f.text_field :title,placeholder: "Title" %>
    <br/><br/>
    <%= f.label :info%>
    <%= f.text_area :info ,placeholder: "Info"%>
    <br/></br>
    <%= f.label :date %>
    <%= f.date_field :date %>
    </br><br/>
      <%= f.submit "Create Event" %>
<% end %>