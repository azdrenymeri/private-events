
<%= form_for @user,:html => {:class => "form-dark"} ,:url => { :controller => "sessions", :action => "create" }, :html => {:method => :post} do |f| %>
  <br>
  <div class="col-xs-4 col-md-offset-4">
  <br>
  <h2 class="mt-5 ">Please log in to continue.</h2>
  <br>
  <%= f.text_field :name ,:class =>"form-control" , placeholder: "Username"%> <br>
  <%= f.password_field :password , placeholder: "Password", :class =>"form-control w-50" %><br>
  <%= f.submit "Login", :class =>"btn btn-primary btn-lg" %>
   </div>
<% end %>
